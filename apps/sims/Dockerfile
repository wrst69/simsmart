# Build the docker image with `npx nx docker-build sims`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t sims`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system sims && \
          adduser --system -G sims sims

COPY dist/apps/sims sims/
RUN chown -R sims:sims .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix sims --omit=dev -f install

CMD [ "node", "sims" ]
